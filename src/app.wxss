/* reset */

/* this is common wxss */
@import "page/common/lib/common.wxss";

page {
    background-color: #fafafa;
    height: 100%;
    font-size: 32rpx;
    line-height: 1.6;
    color: #222;
}

checkbox, radio {
    margin-right: 10rpx;
}

button {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

form {
    width: 100%;
}

/* lib */

.strong {
    font-weight: bold;
}

.tc {
    text-align: center;
}

/* page */

.container {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    justify-content: space-between;
    font-size: 32rpx;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

/* widget */

.btn-area {
    margin-top: 60rpx;
    box-sizing: border-box;
    width: 100%;
    padding: 0 30rpx;
}

/* form input */

form {
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    vertical-align: baseline;
}

input {
    font-size: 32rpx;
    line-height: 1.5;
}

/*button  */

button[type="primary"] {
    color: #fff;
    background: #5bc4c7;
}

.button-hover[type="primary"] {
    color: rgba(255, 255, 255, 0.6);
    background-color: #41babe;
}
