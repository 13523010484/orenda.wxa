/* 我的 页面样式  */

.header {
    padding: 40rpx 0;
    text-align: center;
}

.header .user-avatar {
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    border-radius: 60rpx;
    margin: 0 auto;
    position: relative;
}

.header .user-avatar image {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -50%;
    margin-top: -50%;
    width: 100%;
    height: 100%;
}

.user-name {
    margin: 20rpx 0 0;
}

.todo_lists {
    margin-bottom: 40rpx;
}

.lists_hd__desc image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-right: 10rpx;
    margin-top: -2rpx;
}

.todo_lists .no_lists_hd {
    border-bottom: none;
}

.todo_lists .lists_hd {
    padding: 10rpx 30rpx;
}
