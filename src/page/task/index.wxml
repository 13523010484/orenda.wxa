<import src="../common/loading.wxml" />
<view class="container">
    <template is="loading" data="{{showloading: showloading}}" />
    <view class="page-body" hidden="{{!showloading}}">
        <!-- tab切换 -->
        <view class='tab_warp'>
            <view class="tab {{about==1?'active':''}}" id='1' bindtap="switch_tab">我负责的</view>
            <view class="tab {{about==2?'active':''}}" id='2' bindtap="switch_tab">我发起的</view>
        </view>
        <!--我负责的  -->
        <block wx:if="{{about==1}}">
            <view class='todo_lists'>
                <view class="todo_cell_warp">
                    <view class='todo_cell' data-task-id='{{item.task_id}}' wx:for="{{data.P}}" wx:key="{{item.id}}" bindtap='jumpDetail'>
                        <view class='item-name'> {{item.NAME}}</view>
                        <view class='item-content'>
                            <view class="item-cells">
                                <!--测试头像地址，请获取微信头像  -->
                                <image src='{{userInfo.avatarUrl}}'></image>
                                <text>{{item.executor_name}}</text>
                            </view>
                            <view class="item-cells">
                                <image src='/image/task_time.png'></image>
                                <text>{{item.ask_end_date}}</text>
                            </view>
                            <view class="item-cells">
                                <image src='/image/task_project.png'></image>
                                <text>{{item.project_name}}</text>
                            </view>
                        </view>
                    </view>
                    <!-- 请求成功且数据为空时，默认图文提醒 -->
                     <view wx:if="{{data.A.length == 0}}">
                        <image src='../../image/mytask_img-empty-todo.png'></image>
                        <view>没有正在进行的任务</view>
                        <view>工作全部完成了，太棒了！</view>
                    </view> 
                     <!-- <view class='hide{{data.A.length == 0 ? "show" : ""}}'>
                        <image src='../../image/mytask_img-empty-todo.png'></image>
                        <view>没有正在进行的任务</view>
                        <view>工作全部完成了，太棒了！</view>
                    </view>  -->
                </view>
            </view>
        </block>
        <!--我发起的  -->
        <block wx:if="{{about==2}}">
            <view class='todo_lists border_top' wx:for-index="index" wx:for="{{data.A}}" wx:key="{{item.id}}">
                <view class="todo_cell_warp" bindtap='change_status' data-task-id='{{item.task_id}}' data-task-index='{{index}}'>
                    <view class='todo_cell'>
                        <view class='item-name'>{{item.NAME}}</view>
                        <view class='item-content'>
                            <text>执行人：{{item.executor_name}}</text>
                            <text style='margin-left:20rpx;'>结束时间：{{item.ask_end_date}}</text>
                        </view>
                        <view class='item-content'>
                            可审任务：
                            <text class='assign_due'>{{item.report_num}}</text>个
                            <text style='margin-left:20rpx;'>工作进度：{{item.work_progress}}</text>
                        </view>
                        <view class="icon {{taskReqArray[index].ishidden==true?'':'icon_active'}}"></view>
                    </view>
                </view>
                <view class="todo_cell_warp" hidden='{{taskReqArray[index].ishidden}}'>
                    <view class='todo_cell' wx:for="{{auditData}}" data-task-work-progress-id="{{item.task_work_progress_id}}" bindtap='jumpAduitDetail'>
                        <view class='item-name'>
                            <view class='line-clamp-1'>
                                <text class='assign_due'>({{item.audit_status_name}}) </text>{{item.name}}： {{item.report_content}}</view>
                        </view>
                    </view>
                </view>
            </view>
        </block>
    </view>
</view>

