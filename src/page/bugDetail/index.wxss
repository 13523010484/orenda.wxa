/*bug详情样式*/
@import "/page/task/index.wxss";

.page-body {
    margin-top: 4rpx;
}

.header {
    padding: 30rpx 30rpx 40rpx;
    background-color: #fff;
}

.todo_cell {
    padding: 0;
    border: none;
}

.header .resource-info {
    margin-bottom: 24rpx;
    font-size: 30rpx;
    color: #999;
}

.item-name {
    padding-left: 0;
    font-size: 40rpx;
    line-height: 1.4;
}

.content {
    padding: 0 30rpx;
    background-color: #fff;
    padding-bottom: 48rpx;
}

.content-title {
    font-size: 32rpx;
}

.editor-style {
    font-size: 32rpx;
    line-height: 1.6;
    color: #333;
    word-wrap: break-word;
    overflow-x: auto;
}

.gallery-wrap image {
    width: 100%;
}

.gallery-wrap {
    font-size: 30rpx;
}

.item-content>.item-cells {
    font-size: 30rpx;
}
