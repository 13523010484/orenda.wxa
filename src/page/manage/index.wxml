<!--任务-->
<view class="container">
    <view class="page-body">
        <!-- tab切换 -->
        <view class='tab_warp'>
            <view class="tab {{tab_status==0?'active':''}}" id='0' bindtap="switch_tab">进行中</view>
            <view class="tab {{tab_status==1?'active':''}}" id='1' bindtap="switch_tab">动态</view>
        </view>
        <!--进行中  -->
