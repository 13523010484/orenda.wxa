                                <image src='/image/task_user.png'></image>
                                <text>刘军海</text>
                            </view>
                            <view class="item-cells">
                                <image src='/image/task_time.png'></image>
                                <text>2017-03-01 19:23:38 ~ 2017-10-31</text>
                            </view>
                        </view>
                        <view class='item-precess'>
                            <view class="item-cell">
                                <text>汇报进度</text>
                                <view>
                                    <progress percent="0" color="rgba(83, 176, 56, 0.87)" stroke-width="4" show-info/>
                                </view>
                            </view>
                            <view class="item-cell">
                                <text>工作进度</text>
