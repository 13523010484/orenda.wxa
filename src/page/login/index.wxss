    text-align: center;
}

.layout-center .box .form-item:last-child {
    border-bottom: none;
}

.form .form-field {
    background-color: #fff;
    text-align: center;
}

.layout-center .form-buttons {
    margin: 80rpx 0 0;
}

.layout-center .tiny {
    margin-top: 40rpx;
    font-size: 24rpx;
    color: #999;
}

.form-item {
    position: relative;
}

.form-item:first-child::after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #e5e5e5;
    color: #e5e5e5;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    z-index: 2;
}
