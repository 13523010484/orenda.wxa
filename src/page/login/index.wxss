@import "../common/lib/common.wxss";

.layout-center {
    text-align: center;
}
.layout-center .head {
    padding-top: 60rpx;
    height: 440rpx;
    background-color: #5bc4c7;
}
.layout-center .head .logo,.layout-center .head .title {
    margin-top: 30rpx;
    font-size: 52rpx;
    font-weight: 300;
    line-height: 1.5;
    text-align: center;
    color: #fff;
}
.layout-center .body {
    margin: -160rpx 60rpx 0;
}
form{
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    vertical-align: baseline;
}
input{
    font-family: 'Helvetica Neue', Helvetica, Arial, 'PingFang SC';
    font-size: 32rpx;
    line-height: 1.5;
}
.layout-center .box {
    background-color: #fff;
