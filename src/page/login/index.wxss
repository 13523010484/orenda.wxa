.username{
   width: 100%;
    height: 120rpx;
    padding: 36rpx 20rpx;
    text-align: center;
}
.layout-center .box .form-item:last-child {
    border-bottom: none;
}
.form .form-field {
    background-color: #fff;
    text-align: center
}
.layout-center .form-buttons {
    margin: 80rpx 0 0;
}
.btn, button, input[type=submit] {
    display: block;
    width: 100%;
    height: 100rpx;
    padding: 0;
    color: #fff;
    line-height: 100rpx;
    text-decoration: none;
    text-align: center;
    border: 0;
    border-radius: 8rpx;
    background: #5bc4c7;
    outline: none;
    -ms-user-select: none;
    -moz-user-select: none;
    -webkit-user-select: none;
    user-select: none;
}
.layout-center .tiny {
    margin-top: 40rpx;
    font-size: 24rpx;
