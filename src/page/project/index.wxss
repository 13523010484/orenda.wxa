/* 项目列表样式  */
.project{
        border-bottom: 2rpx solid #e8e8e8;
         background-color: #fff;
         padding: 18rpx 30rpx; 
         display: inline-flex;
         justify-content: flex-start;
         align-content: center;
          width: calc(100% - 36rpx); 
}
.project:first-child{
        border-top: 2rpx solid #e8e8e8;        
}
.project-name{
        line-height: 64rpx;
        color: #222;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
}
.project>image{ 
        margin-right: 30rpx;
        width: 64rpx;
        height: auto;
}
.button-create {
    position: fixed;
    right: 0;
    bottom: 40rpx;
    left: 0;
    margin: auto;
    width: 180rpx;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    line-height: 64rpx;
    border-radius: 34rpx;
    background-color: #4ea5ad;
    box-shadow: 1px 1px 1px rgba(0,0,0,0.1);
    z-index: 9;
}
