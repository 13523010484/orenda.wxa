page {
    line-height: 1.6;
    font-family: -apple-system-font, "Helvetica Neue", sans-serif;
}

icon {
    vertical-align: middle;
}

/* tabs */

.tab_warp {
    margin: 20rpx 30rpx;
    height: 60rpx;
    border: 2rpx solid #5bc4c7;
    border-radius: 8rpx;
    font-size: 28rpx;
    background-color: #fff;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.tab_warp .tab {
    display: block;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    line-height: 56rpx;
    text-align: center;
    color: #5bc4c7;
}

.tab_warp .tab.active {
    background-color: #5bc4c7;
    color: #fff;
}

/*lists  */

.todo_lists {
    margin: 10px 0;
    font-size: 28rpx;
    background-color: #fff;
    margin-bottom: -2rpx;
}

.todo_lists .lists_hd {
    position: relative;
    padding: 0 30rpx;
    height: 88rpx;
    line-height: 88rpx;
    color: #222;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}

.todo_lists .lists_hd .lists_hd__desc {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
}

.todo_lists .lists_hd:active {
    background-color: #f2f2f2;
}

.todo_lists .lists_hd text.icon {
    text-align: right;
    color: #999;
    position: relative;
}

.todo_lists .lists_hd text.icon::after {
    content: " ";
    display: inline-block;
    height: 12rpx;
    width: 12rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #c8c8cd;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 4rpx;
}

.todo_lists .lists_hd text.icon.icon_active::after {
    border-width: 0 4rpx 4rpx 0;
}

.todo_cell {
    display: block;
    position: relative;
    padding: 16rpx 30rpx;
    line-height: 44rpx;
    color: #222;
    font-size: 28rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #e5e5e5;
    word-break: break-all;
    word-wrap: break-word;
}

.todo_cell:active {
    background-color: #f2f2f2;
}

.todo_cell .item-name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.todo_cell .item-content {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 24rpx;
    color: #999;
    margin-top: 6rpx;
}

.todo_cell text.assign_due {
    color: #f66239;
}

.todo_cell .item-content>text {
    margin-right: 10rpx;
}

/*悬浮框  */

.float-btn {
    position: fixed;
    right: 0;
    bottom: 40rpx;
    left: 0;
    margin: auto;
    width: 180rpx;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    line-height: 68rpx;
    border-radius: 34rpx;
    background-color: #4ea5ad;
    box-shadow: 1rpx 1rpx 1rpx rgba(0, 0, 0, 0.1);
    z-index: 9;
}

.float-btn-active {
    background-color: #f2f2f2;
    color: #999;
}

/*form  */

.form_warp textarea, .form_warp input[type="text"] {
    padding: 20rpx 30rpx;
    min-height: 80rpx;
    border-bottom: 1rpx solid #e5e5e5;
    background-color: #fff;
}

.section__title {
    margin-top: 0.77em;
    margin-bottom: 0.3em;
    padding-left: 30rpx;
    padding-right: 30rpx;
    color: #999;
    font-size: 28rpx;
    display: block;
}

.section__title-tips {
    margin-top: 0.3em;
    color: #999;
    padding-left: 30rpx;
    padding-right: 30rpx;
    font-size: 28rpx;
}

.form_warp .textarea {
    word-wrap: break-word;
    width: inherit;
}

/*loading  */

.loading {
    text-align: center;
    height: 100%;
    margin-top: 50%
}

.loading .icon {
    -webkit-animation: twr-spin 2s infinite linear;
    animation: twr-spin 2s infinite linear;
    width: 84rpx;
    height: 84rpx;

}
.loading .desc{
    color: #999;
    font-size: 24rpx

}

@keyframes twr-spin {
    0% {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
    }

    100% {
        -webkit-transform: rotate(359deg);
        transform: rotate(359deg);
    }
}
